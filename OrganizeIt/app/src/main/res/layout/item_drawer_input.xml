<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"
        android:padding="0dp"
        android:backgroundTint="@color/transparent"
        app:srcCompat="@drawable/baseline_drag_indicator_24" />

    <EditText
        android:id="@+id/drawerNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/drawer_name"
        android:inputType="text" />

    <ImageButton
        android:id="@+id/buttonDeleteDrawerInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/delete_btn_ripple_effect"
        android:contentDescription="@string/delete_drawer"
        android:padding="0dp"
        android:src="@drawable/ic_delete"
        app:tint="@android:color/holo_red_dark" />

</android.widget.LinearLayout>